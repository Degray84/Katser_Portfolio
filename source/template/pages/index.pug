extends ../_template

block variables
  - var title = 'Welcome page'

block content
  main.main
    .main__login
      .login
        a(href="#", title="Авторизация").login__title Авторизация
    .main__card.main__card_active
      .card-menu
        .card-menu__user     
          .user
            .user__pic
              img.user__pic-img
            .user__description
              .user__name #{com.user_name}
              .user__info #{com.user_title}
        .card-menu__socials
          ul.socials
            each item in com.socials
              li.socials__item
                a(href="#", class=`socials__item socials__item_${item}`) #{item}
        .card-menu__nav
          ul.main-nav
              li.main-nav__item
                a(href="works.html", class=`main-nav__item`) Мои работы
              li.main-nav__item
                a(href="about.html", class=`main-nav__item`) Обо мне
              li.main-nav__item
                a(href="blog.html", class=`main-nav__item`) Блог
