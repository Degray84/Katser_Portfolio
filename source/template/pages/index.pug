extends ../_template

block variables
  - var title = 'Welcome page'

block content
  main.main
    img.main__bg(src="./assets/img/bg/mountains.png")
    .main__container
        .main__login
          .login
            a(href="#").login__title Авторизация
        .main__card.main__card_active
          .card-menu
            .card-menu__wrapper
              .card-menu__user     
                .user
                  .user__pic
                    img(src="./assets/img/MyPhoto(06.17).jpg", alt="").user__pic-img
                  .user__description
                    .user__name #{com.user_name}
                    .user__info #{com.user_title}
              .card-menu__socials
                ul.socials
                  li.socials__item
                    a(href="https://vk.com/id258183174", target="_blank")
                      svg.social__icon.social_icon-vk
