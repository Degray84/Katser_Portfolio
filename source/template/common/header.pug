section.section.hero
  img.hero__bg(src="./assets/img/bg/mountains.png")
  .hero__container
    .hero__socials
      ul.socials
        li.socials__item
          a(href="https://vk.com/id258183174", target="_blank")
            svg.social__icon_small.icon_color-white
              use(xlink:href="./assets/img/sprite.svg#vk")
        li.socials__item
          a(href="https://github.com/Degray84", target="_blank")
            svg.social__icon_small.icon_color-white
              use(xlink:href="./assets/img/sprite.svg#github")         
        li.socials__item
          a(href="https://www.linkedin.com/in/%D1%81%D0%B5%D1%80%D0%B3%D0%B5%D0%B9-%D0%BA%D0%B0%D1%86%D0%B5%D1%80-35b351141/", target="_blank")
            svg.social__icon_small.icon_color-white
              use(xlink:href="./assets/img/sprite.svg#in")
    .hamburger.hero__menu
      .hamburger-icon
        span.hamburger-icon__line.hamburger-icon__line-top
        span.hamburger-icon__line.hamburger-icon__line-middle
        span.hamburger-icon__line.hamburger-icon__line-bottom
    .arrow-down.hero__scroll-button
      svg.arrow-down__pic
        use(xlink:href="./assets/img/sprite.svg#arrow_down")
    .hero__title
      .section-title
        svg.section-title__pic
          use(xlink:href="./assets/img/sprite.svg#portfolio_header")
    .hero__user
      .user
        .user__pic
          img(src="./assets/img/MyPhoto(06.17).jpg", alt="").user__pic-img
        .user__description
          .user__name.user__name_about #{com.user_name}
          .user__info.user__info_about #{com.user_title}
    